{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "Sylvain",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "npm run migrate:prod",
    "build": "dotenv -e env/development.env nest build",
    "dev": "dotenv -e env/development.env npm run start:dev",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migrate:dev": "dotenv -e env/development.env -- npx prisma migrate dev",
    "migrate:prod": "dotenv -e env/development.env npx prisma migrate deploy",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e env/test.env ./scripts/setup-tests.sh && jest --runInBand",
    "test:watch": "dotenv -e env/test.env ./scripts/setup-tests.sh && jest --watch --runInBand",
    "test:cov": "dotenv -e env/test.env ./scripts/setup-tests.sh && jest --coverage --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/throttler": "^4.0.0",
    "@prisma/client": "^4.12.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "env-var": "^7.3.0",
    "luxon": "^3.3.0",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/luxon": "^3.3.0",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "jwt-decode": "^3.1.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.3.2",
    "prisma": "^4.12.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "@root": ".",
    "@core": "src/core",
    "@infrastructure": "src/infrastructure",
    "@application": "src/application",
    "@test": "test"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "prisma": {
    "schema": "src/infrastructure/adapter/prisma/schema/schema.prisma"
  }
}
